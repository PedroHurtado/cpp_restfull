    // ConfiguraciÃ³n C++20 por defecto
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.compilerPath": "/usr/bin/g++",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",
    "C_Cpp.default.compilerArgs": [
        "-std=c++20",
        "-fconcepts",
        "-Wall",
        "-Wextra",
        "-g"
    ],
    
    // Code Runner con ruta completa y mejor manejo de errores
    "code-runner.executorMap": {
        "cpp": "cd \"$workspaceRoot\" && mkdir -p build && g++ -std=c++20 -fconcepts -Wall -Wextra -g \"$fullFileName\" -o build/main && echo 'ðŸš€ Ejecutando...' && ./build/main"
    },
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.clearPreviousOutput": true,
    
    // Configurar el directorio de trabajo para Code Runner
    "code-runner.cwd": "$workspaceRoot",
    "code-runner.fileDirectoryAsCwd": false,
    
    // IntelliSense mÃ¡s responsive
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.autocomplete": "default",
    "C_Cpp.errorSquiggles": "enabled",
    
    // ConfiguraciÃ³n del terminal
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.defaultProfile.linux": "bash"
}